<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cicada.dao.UserDao">
  <select id="login" resultType="user">
	SELECT * FROM USER WHERE  deleted=0 AND login_state=0 AND login_name=#{login_name} AND PASSWORD=#{password} LIMIT 1
  </select>
   <select id="getAllUser" resultType="user">
	select * from user
  </select>
  <update id="updateLoginMessage">
  	UPDATE USER SET login_ip=#{login_ip},login_time=now(),login_state='1' where id=#{id}
  </update>
</mapper>